<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_call_ring"
    android:layout_width="@dimen/incoming_pad_loading_width"
    android:layout_height="match_parent"
    android:background="@drawable/shape_corners_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_incomingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:shadowColor="#66000000"
        android:shadowRadius="3.0"
        android:singleLine="true"
        android:text="视频聊天请求"
        android:textSize="@dimen/incoming_pad_call_txt_size" />

    <RelativeLayout
        android:layout_width="@dimen/incoming_pad_loading_width"
        android:layout_height="@dimen/incoming_pad_loading_height"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/LoadingHalo1"
            android:layout_width="@dimen/incoming_pad_loading_halo_width"
            android:layout_height="@dimen/incoming_pad_loading_halo_width"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:background="@drawable/shape_call_halo_ring" />

        <ImageView
            android:id="@+id/LoadingHalo2"
            android:layout_width="@dimen/incoming_pad_loading_halo_width"
            android:layout_height="@dimen/incoming_pad_loading_halo_width"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:background="@drawable/shape_call_halo_ring" />

        <ImageView
            android:id="@+id/LoadingHalo3"
            android:layout_width="@dimen/incoming_pad_loading_halo_width"
            android:layout_height="@dimen/incoming_pad_loading_halo_width"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:background="@drawable/shape_call_halo_ring" />

        <ImageView
            android:id="@+id/LoadingHalo4"
            android:layout_width="@dimen/incoming_pad_loading_halo_width"
            android:layout_height="@dimen/incoming_pad_loading_halo_width"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:background="@drawable/shape_call_halo_ring" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/call_facetime" />
    </RelativeLayout>

    <Chronometer
        android:id="@+id/dialog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="00:00"
        android:textColor="#b2ffffff"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:shadowRadius="3.0"
        android:text="接通"
        android:nextFocusDown="@+id/btn_hungUp"
        android:onClick="onClick"
        android:textSize="33sp" />

    <Button
        android:id="@+id/btn_hungUp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:shadowRadius="3.0"
        android:text="挂断"
        android:nextFocusUp="@+id/btn_accept"
        android:onClick="onClick"
        android:textSize="33sp" />

</LinearLayout>