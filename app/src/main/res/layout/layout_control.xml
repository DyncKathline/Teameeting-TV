<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:layout_alignParentRight="true"
    tools:showIn="@layout/activity_main">


    <org.dync.tv.teameeting.view.RoomControls
        android:id="@+id/llayout_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="true"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_audio_soundon"
            style="@style/btn_control"
            android:drawableTop="@drawable/btnview_soundon_icon_selector"
            android:focusable="true"
            android:nextFocusDown="@+id/iv_remoteview1"
            android:nextFocusUp="@+id/iv_remoteview1"
            android:nextFocusLeft="@+id/btn_main_hangup"
            android:nextFocusRight="@+id/btn_main_hangup"
            android:text="静音" />

        <Button
            android:id="@+id/btn_main_hangup"
            style="@style/btn_control"
            android:drawableTop="@drawable/btnview_hungup_icon_selector"
            android:focusable="true"
            android:nextFocusDown="@+id/iv_remoteview1"
            android:nextFocusUp="@+id/iv_remoteview1"
            android:nextFocusLeft="@+id/btn_audio_soundon"
            android:nextFocusRight="@+id/btn_audio_soundon"
            android:text="挂断" />
    </org.dync.tv.teameeting.view.RoomControls>
</LinearLayout>