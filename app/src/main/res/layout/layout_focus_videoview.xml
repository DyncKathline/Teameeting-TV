<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_focus_videoview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_localview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="67"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/videoview_focus_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_remoteview1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/videoview_focus_selector"
            android:nextFocusLeft="@+id/iv_remoteview3"
            android:nextFocusUp="@+id/btn_audio_soundon"
            android:nextFocusDown="@+id/btn_audio_soundon"
            android:nextFocusRight="@+id/iv_remoteview2" />

        <ImageView
            android:id="@+id/iv_remoteview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/videoview_focus_selector"
            android:nextFocusLeft="@+id/iv_remoteview1"
            android:nextFocusUp="@+id/btn_audio_soundon"
            android:nextFocusDown="@+id/btn_audio_soundon"
            android:nextFocusRight="@+id/iv_remoteview3" />

        <ImageView
            android:id="@+id/iv_remoteview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/videoview_focus_selector"
            android:nextFocusLeft="@+id/iv_remoteview2"
            android:nextFocusUp="@+id/btn_audio_soundon"
            android:nextFocusDown="@+id/btn_audio_soundon"
            android:nextFocusRight="@+id/iv_remoteview1" />
    </LinearLayout>
</LinearLayout>