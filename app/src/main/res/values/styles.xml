<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">landscape</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@null</item>
    </style>

    <style name="btn_control">
        <item name="android:background">@drawable/shape_corners_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>

        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="LoadingHalo">
        <item name="android:layout_width">@dimen/incoming_pad_loading_halo_width</item>
        <item name="android:layout_height">@dimen/incoming_pad_loading_halo_width</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:alpha">0</item>
        <item name="android:background">@drawable/shape_call_halo_ring</item>
    </style>

</resources>
